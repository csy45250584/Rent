<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_181"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_house_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_138"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tv_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:text="国风上官1局势"
        android:textColor="@color/colorText1"
        android:textSize="@dimen/text_30px"/>

    <TextView
        android:id="@+id/tv_house_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:text="萧山|2室1厅|75㎡"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/text_26px"/>

    <TextView
        android:id="@+id/tv_house_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:text="8231/月"
        android:textColor="#FF8800"
        android:textSize="@dimen/text_36px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/bg_house_tip"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:singleLine="true"
            android:text="精品房源"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/text_24px"/>
    </LinearLayout>
</LinearLayout>