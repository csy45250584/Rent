<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorShouye"/>

    <ImageView
        android:id="@+id/img_jiudian"
        android:src="@mipmap/tpxq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        />

    <TextView
        android:id="@+id/txt_jiudian"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:text="国风上观1居室"
        android:textColor="@color/colorTextBlack"
        android:layout_marginLeft="@dimen/dp_6"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="杭州西湖武林广场"
        android:textColor="@color/colorContent"
        android:layout_marginLeft="@dimen/dp_6"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_jiudianjiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="￥231起"
            android:textColor="@color/colorJuse"
            android:layout_marginLeft="@dimen/dp_6"

            />

        <LinearLayout
        android:layout_alignParentRight="true"
            android:padding="@dimen/dp_2"
            android:layout_margin="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三星级"
                android:textColor="@color/colorContent"
                android:background="@drawable/shape_hlistviewtag"
                android:padding="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/txt_jushiweizhiditie"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="豪华型"
                android:textColor="@color/colorContent"
                android:background="@drawable/shape_hlistviewtag"
                android:padding="@dimen/dp_5"
                />



        </LinearLayout>

    </RelativeLayout>


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp_2"-->
    <!--android:background="@color/colorTextBlack"/>-->

</LinearLayout>
