<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/relative_top"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        >
        <RelativeLayout

            android:id="@+id/Realtive_xuanzeruzhutuichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_12">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jq"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>




    </RelativeLayout>

    <LinearLayout
        android:layout_above="@+id/Relative_xuanze"
        android:layout_below="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xzrzr"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/sp_20"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_12"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorShouye"
        android:layout_margin="@dimen/dp_12"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <ListView
               android:id="@+id/list_ruzhu"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_328" />

       <Button
           android:layout_marginTop="@dimen/dp_12"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/tjrzr"
           android:textSize="@dimen/sp_18"
           android:textColor="@color/colorJuse"
           android:background="@drawable/shape_btnxuanzeruzhuren"
           android:paddingTop="@dimen/dp_6"
           android:paddingBottom="@dimen/dp_6"
           android:layout_marginLeft="@dimen/dp_50"
           android:layout_marginRight="@dimen/dp_50"
           />

       </LinearLayout>


   </ScrollView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Relative_xuanze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorJuse"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/dp_12"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/ysrz"
            android:textSize="@dimen/sp_18"
            />

    </RelativeLayout>



</RelativeLayout>
