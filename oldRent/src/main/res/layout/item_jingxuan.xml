<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_jingxuan"
        android:src="@mipmap/tj1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"/>

    <TextView
        android:id="@+id/txt_jushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:text="国风上观1居室"
        android:textColor="@color/colorTextBlack"
        android:layout_marginLeft="@dimen/dp_6"

        />

    <TextView
        android:id="@+id/txt_jushiweizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="萧山|2室1厅|75㎡|西"
        android:textColor="@color/colorContent"
        android:layout_marginLeft="@dimen/dp_6"

        />
    <TextView
        android:id="@+id/txt_jushijiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:text="￥8231/月"
        android:textColor="@color/colorJuse"
        android:layout_marginLeft="@dimen/dp_6"

        />

    <LinearLayout
        android:padding="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jingpingfangyaun"
            android:textColor="@color/colorContent"
            android:background="@drawable/shape_hlistviewtag"
            android:padding="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/txt_jushiweizhiditie"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jingpingfangyaun"
            android:textColor="@color/colorContent"
            android:background="@drawable/shape_hlistviewtag"
            android:padding="@dimen/dp_5"
            />





    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_2"-->
        <!--android:background="@color/colorTextBlack"/>-->



</LinearLayout>
