<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShouye"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/title_fukaunfangshi"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        >
        <RelativeLayout
            android:id="@+id/Realtive_fukuanfangshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_12">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tc"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fukaunfnagshi"
            android:textColor="@color/colorContent"
            android:textSize="@dimen/sp_16"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_12"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorTextGrey"

        />

    <LinearLayout

        android:layout_below="@+id/title_fukaunfangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorShouye"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_querenweizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="萧山宝龙城市广场轩南区5居室-01卧"
                    android:textColor="@color/colorTextBlack"
                    android:layout_margin="@dimen/dp_12"
                    android:textSize="@dimen/sp_25"
                    />

                <TextView
                    android:id="@+id/txt_querenzujin"
                    android:layout_below="@+id/txt_querenweizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2531元/月"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorJuse"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_6"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </LinearLayout>

        <LinearLayout
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhifufangshi"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorContent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginBottom="@dimen/dp_6"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xuanzezhifu"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/colorTextGrey"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_18"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.haokuo.housemanage.houserentmanage.Utils.CheckBoxSample
                android:id="@+id/check1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:color_background="#FFB704"
                app:color_border="#C7C7C7"
                app:size="@dimen/dp_18"
                />

                <TextView
                    android:layout_toRightOf="@id/check1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yayifuyi"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorContent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.haokuo.housemanage.houserentmanage.Utils.CheckBoxSample
                    android:id="@+id/check2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:color_background="#FFB704"
                    app:color_border="#C7C7C7"
                    app:size="@dimen/dp_18"
                    />

                <TextView
                    android:layout_toRightOf="@id/check2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yayifusan"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorContent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.haokuo.housemanage.houserentmanage.Utils.CheckBoxSample
                    android:id="@+id/check3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:color_background="#FFB704"
                    app:color_border="#C7C7C7"
                    app:size="@dimen/dp_18"
                    />

                <TextView
                    android:layout_toRightOf="@id/check3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yayifuliu"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorContent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    />

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.haokuo.housemanage.houserentmanage.Utils.CheckBoxSample
                    android:id="@+id/check4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:color_background="#FFB704"
                    app:color_border="#C7C7C7"
                    app:size="@dimen/dp_18"
                    />

                <TextView
                    android:layout_toRightOf="@id/check4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yayifushier"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorContent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Ralative_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorJuse"
        android:layout_alignParentBottom="true"
        >
        <TextView

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/querenfukuanfangshi"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorWhite"
            />
    </RelativeLayout>

</RelativeLayout>