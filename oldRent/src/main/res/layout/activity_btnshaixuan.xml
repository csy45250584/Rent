<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            >
            <RelativeLayout
                android:id="@+id/Realtive_btnshaixuantuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_12">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jq"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gdsx"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chongzhi"
            android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_16"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorShouye"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiage"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_18"
                android:layout_margin="@dimen/dp_12"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_300"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_18"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                />

            <com.haokuo.housemanage.houserentmanage.touchprogressview.widget.TouchProgressView
                android:id="@+id/proview_priceshaixuan"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_height="@dimen/dp_20" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radbtn_0"
                    style="@style/Radiobtnpaixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0" />

                <RadioButton
                    android:id="@+id/radbtn_300"
                    style="@style/Radiobtnpaixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥300" />

                <RadioButton
                    android:id="@+id/radbtn_600"
                    style="@style/Radiobtnpaixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥600" />

                <RadioButton

                    android:id="@+id/radbtn_900"
                    style="@style/Radiobtnpaixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥900" />

                <RadioButton
                    android:id="@+id/radbtn_nolimit"
                    style="@style/Radiobtnpaixu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buxian" />



            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jdxj"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_18"
                android:layout_margin="@dimen/dp_12"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sxj"
                    style="@style/Checkbox"
                    android:checked="true"
                    />
                <CheckBox
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/j"
                    style="@style/Checkbox"

                    />
                <CheckBox
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wxj"
                    style="@style/Checkbox"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorShouye"/>


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_yysx"
        android:padding="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/yysx"
        android:background="@color/colorJuse"
        android:textSize="@dimen/sp_16"

        />

</RelativeLayout>
