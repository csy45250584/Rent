<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textColor="@color/colorJuse"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:textSize="@dimen/sp_30"
            android:src="@mipmap/txpj"
            />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/txt_pingjiaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胡海"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_16"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_pingjiaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_6">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorJuse"
                    android:src="@mipmap/xp"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorJuse"
                    android:src="@mipmap/xp"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorJuse"
                    android:src="@mipmap/xp"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorJuse"
                    android:src="@mipmap/xp"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorJuse"
                    android:src="@mipmap/xp1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0分"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorJuse"
                    android:layout_marginLeft="@dimen/dp_6"/>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout

            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_12"

            >


            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:id="@+id/txt_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-09-07"
                android:textColor="@color/colorContent"
                android:textSize="@dimen/sp_14"
                />



        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorTextBlack"
        android:text="酒店地理位置。离公交站，地铁站都很近，去外滩或是经贸大厦可乘公交。也可以步行曲酒店有自己的院子，大车自驾可以把车停在里面，十分方便，房间里也十分干净整洁，服务人员的热情服务，让人宾至如归十分值得推荐。"/>

    <RelativeLayout
        android:padding="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武林广场昊呐▪酒店大床房"
            android:textColor="@color/colorContent"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-09-07入住"
            android:textColor="@color/colorContent"
            android:textSize="@dimen/sp_14"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorShouye"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

</LinearLayout>
