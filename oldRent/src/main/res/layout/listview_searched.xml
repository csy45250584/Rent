<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_6">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:src="@mipmap/tpxq"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_searchedPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:text="萧山宝龙城市广场1居室"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_12"
            />

        <RelativeLayout
            android:padding="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:textColor="@color/colorTextGrey"
                android:text="75m|2/8层"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_16"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥8231/月"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_12"
                android:textColor="@color/colorJuse"

                />

        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            >
            <ImageView
                android:id="@+id/image_dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/dz"
                android:layout_centerVertical="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距2号线建设一路1222米"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/sp_16"
                android:layout_toRightOf="@+id/image_dz"
                android:layout_marginLeft="@dimen/dp_6"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="离地铁近"
            android:textColor="@color/colorTextGrey"
            android:background="@color/colorShouye"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            />


    </LinearLayout>

</LinearLayout>
