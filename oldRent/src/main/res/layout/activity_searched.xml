<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        >
<RelativeLayout
    android:id="@+id/relative_searchback"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent">


     <ImageView
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@mipmap/tc"
         android:layout_marginLeft="@dimen/dp_12"
         android:layout_gravity="center_vertical"
         />
</RelativeLayout>


        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linearlayout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="@dimen/dp_6"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ss"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                />

            <TextView
                android:id="@+id/edit_shouyeshousuo"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/sousuohint"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorTextGrey"
                android:textSize="@dimen/sp_14"

                />

        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/dt"
            />

        <RelativeLayout
            android:id="@+id/relative_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gdd"
            />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:orientation="horizontal">


        <RadioGroup
        android:id="@+id/searchedRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radiobtn_zufang"
            style="@style/shuaixunbtn"
            android:text="@string/zufang"
            android:textColor="@drawable/selector_searchbtncolor"
            />

        <RadioButton
            android:id="@+id/radiobtn_weizhi"
            style="@style/shuaixunbtn"
            android:text="@string/weizhi"
            android:textColor="@drawable/selector_searchbtncolor"

            />

        <RadioButton
            android:id="@+id/radiobtn_zujin"
            style="@style/shuaixunbtn"
            android:text="@string/zujin"
            android:textColor="@drawable/selector_searchbtncolor"


            />

        <RadioButton
            android:id="@+id/radiobtn_shaixuan"
            style="@style/shuaixunbtn"
            android:text="@string/shaixuan"
            android:textColor="@drawable/selector_searchbtncolor"

            />

         <RadioButton
             android:id="@+id/image_paixu"
             android:layout_width="0dp"
             android:layout_weight="0.3"
             android:layout_height="match_parent"
             android:drawableLeft="@mipmap/px"
             android:button="@null"
             android:layout_gravity="center"
             />

        </RadioGroup>




    </LinearLayout>

    <RadioGroup
        android:id="@+id/JingpingyouzhiRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_12"
        >

        <RadioButton
            android:id="@+id/radiobtn_jingpingfangyuan"
            android:checked="true"
            style="@style/JingpingYouzhi"
            android:text="@string/jingpingfangyuan"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <RadioButton
            android:id="@+id/radiobtn_youzhigongyu"
            android:text="@string/youzhigongyu"
            android:layout_marginLeft="@dimen/dp_6"
            style="@style/JingpingYouzhi"


            />


    </RadioGroup>

    <View
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/colorTextGrey"
        android:layout_marginBottom="@dimen/dp_6"
        />

    <ListView
        android:id="@+id/listView_searched"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>




</LinearLayout>